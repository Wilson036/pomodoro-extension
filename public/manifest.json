{
  "manifest_version": 3,
  "name": "番茄鐘計時器",
  "version": "1.0.0",
  "description": "專注工作，高效休息的番茄鐘計時器",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "番茄鐘計時器"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "host_permissions": []
}
